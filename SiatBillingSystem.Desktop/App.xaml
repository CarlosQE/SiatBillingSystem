<Application x:Class="SiatBillingSystem.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:SiatBillingSystem.Desktop.Converters"
             xmlns:system="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Typography.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters globales -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

            <!-- Sidebar principal: 220px expandido / 60px contraído -->
            <converters:BoolToWidthConverter x:Key="MenuWidthConverter"
                                             TrueValue="220" FalseValue="60"/>
            <!-- Panel edición clientes: 320px visible / 0px oculto -->
            <converters:BoolToWidthConverter x:Key="BoolToWidthConverter320"
                                             TrueValue="320" FalseValue="0"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>