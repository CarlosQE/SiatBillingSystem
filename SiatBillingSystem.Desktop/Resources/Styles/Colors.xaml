<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ── NEXUS BY INSEIN — Paleta Oficial ── -->

    <!-- Fondos -->
    <SolidColorBrush x:Key="BgPrimary"      Color="#0F1117"/>
    <SolidColorBrush x:Key="BgSecondary"    Color="#161B22"/>
    <SolidColorBrush x:Key="BgCard"         Color="#1C2128"/>
    <SolidColorBrush x:Key="Sidebar"        Color="#1A2026"/>
    <SolidColorBrush x:Key="SidebarHeader"  Color="#0F1419"/>
    <SolidColorBrush x:Key="TopBar"         Color="#161B22"/>

    <!-- Brand INSEIN -->
    <SolidColorBrush x:Key="BrandGray"      Color="#6C7F88"/>
    <SolidColorBrush x:Key="BrandGrayLight" Color="#8A9BA4"/>

    <!-- Accent Nexus — Verde INSEIN -->
    <SolidColorBrush x:Key="Accent"         Color="#6ED60E"/>
    <SolidColorBrush x:Key="AccentHover"    Color="#82F010"/>
    <SolidColorBrush x:Key="AccentPressed"  Color="#58AA0B"/>
    <SolidColorBrush x:Key="AccentMuted"    Color="#1A6ED60E"/>
    <SolidColorBrush x:Key="AccentFg"       Color="#0F1117"/>

    <!-- Estados -->
    <SolidColorBrush x:Key="Success"        Color="#6ED60E"/>
    <SolidColorBrush x:Key="Warning"        Color="#F59E0B"/>
    <SolidColorBrush x:Key="Danger"         Color="#EF4444"/>
    <SolidColorBrush x:Key="DangerHover"    Color="#F87171"/>
    <SolidColorBrush x:Key="DangerMuted"    Color="#1AEF4444"/>
    <SolidColorBrush x:Key="Info"           Color="#6C7F88"/>

    <!-- Texto -->
    <SolidColorBrush x:Key="TextPrimary"    Color="#E8EAF0"/>
    <SolidColorBrush x:Key="TextSecondary"  Color="#9BA3B8"/>
    <SolidColorBrush x:Key="TextLight"      Color="#C8CCDA"/>
    <SolidColorBrush x:Key="TextDisabled"   Color="#4A5068"/>
    <SolidColorBrush x:Key="TextOnAccent"   Color="#0F1117"/>

    <!-- Bordes -->
    <SolidColorBrush x:Key="BorderColor"    Color="#2A3040"/>
    <SolidColorBrush x:Key="BorderSubtle"   Color="#1F2538"/>
    <SolidColorBrush x:Key="BorderAccent"   Color="#3A6E1A"/>

    <!-- Inputs -->
    <SolidColorBrush x:Key="InputBg"        Color="#1C2128"/>
    <SolidColorBrush x:Key="InputBorder"    Color="#30363D"/>
    <SolidColorBrush x:Key="InputFocusBorder" Color="#6ED60E"/>

</ResourceDictionary>