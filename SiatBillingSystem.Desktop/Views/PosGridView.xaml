<UserControl x:Class="SiatBillingSystem.Desktop.Views.PosGridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SiatBillingSystem.Desktop.ViewModels"
             Background="{StaticResource BgPrimary}">

    <UserControl.InputBindings>
        <KeyBinding Key="F5" Command="{Binding NuevaFacturaCommand}"/>
        <KeyBinding Key="F9" Command="{Binding EmitirFacturaCommand}"/>
    </UserControl.InputBindings>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-- COLUMNA IZQUIERDA: Cliente + Grid + Entrada -->
        <Grid Grid.Column="0" Margin="0,0,12,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Datos del Cliente -->
            <Border Grid.Row="0" Style="{StaticResource CardBorder}" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                               Text="DATOS DEL CLIENTE" Margin="0,0,0,10"
                               Style="{StaticResource SectionHeader}"/>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="NIT / CI" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="TxtNit" Style="{StaticResource PosTextBox}"
                                 Text="{Binding NitCliente, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter"
                                    Command="{Binding DataContext.NuevaFacturaCommand,
                                    RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,8,0">
                        <TextBlock Text="Nombre / RazÃ³n Social" Style="{StaticResource FieldLabel}"/>
                        <TextBox Style="{StaticResource PosTextBox}"
                                 Text="{Binding NombreCliente, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="2">
                        <TextBlock Text="Complemento" Style="{StaticResource FieldLabel}"/>
                        <TextBox Style="{StaticResource PosTextBox}"
                                 Text="{Binding Complemento, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Entrada de Ã­tem -->
            <Border Grid.Row="1" Style="{StaticResource CardBorderAccent}" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="4"
                               Text="AGREGAR ÃTEM" Margin="0,0,0,10"
                               Style="{StaticResource SectionHeader}"/>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="DescripciÃ³n del servicio" Style="{StaticResource FieldLabel}"/>
                        <TextBox Style="{StaticResource PosTextBox}"
                                 Text="{Binding DescripcionItem, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,8,0">
                        <TextBlock Text="Cantidad" Style="{StaticResource FieldLabel}"/>
                        <TextBox Style="{StaticResource PosTextBoxNumber}"
                                 Text="{Binding Cantidad, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,8,0">
                        <TextBlock Text="Precio Unitario (Bs.)" Style="{StaticResource FieldLabel}"/>
                        <TextBox Style="{StaticResource PosTextBoxNumber}"
                                 Text="{Binding PrecioUnitario, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding AgregarItemCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="3" VerticalAlignment="Bottom">
                        <Button Style="{StaticResource BtnPrimary}" Height="36"
                                Width="90" Content="+ Agregar"
                                Command="{Binding AgregarItemCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- DataGrid de Ã­tems -->
            <Border Grid.Row="2" Style="{StaticResource CardBorder}" Padding="0">
                <DataGrid Style="{StaticResource PosDataGrid}"
                          ColumnHeaderStyle="{StaticResource DataGridColumnHeader}"
                          RowStyle="{StaticResource DataGridRow}"
                          ItemsSource="{Binding Items}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding Numero}" Width="40"/>
                        <DataGridTextColumn Header="DescripciÃ³n" Binding="{Binding Descripcion}" Width="*"/>
                        <DataGridTextColumn Header="Cant." Binding="{Binding Cantidad, StringFormat=N2}"
                                            Width="60" ElementStyle="{StaticResource BodyText}"/>
                        <DataGridTextColumn Header="P. Unit." Binding="{Binding PrecioUnitario, StringFormat=N2}"
                                            Width="80"/>
                        <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=N2}"
                                            Width="90"/>
                        <DataGridTemplateColumn Header="" Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource BtnDanger}" Content="âœ•"
                                            FontSize="12" Width="28" Height="28"
                                            Command="{Binding DataContext.EliminarItemCommand,
                                                RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Leyenda -->
            <Border Grid.Row="3" Margin="0,10,0,0" Padding="10,8"
                    Background="{StaticResource BgSecondary}"
                    BorderBrush="{StaticResource BorderColor}" BorderThickness="1"
                    CornerRadius="6">
                <TextBlock Text="{Binding LeyendaFactura}"
                           Style="{StaticResource FooterLabel}"
                           TextWrapping="Wrap"/>
            </Border>
        </Grid>

        <!-- COLUMNA DERECHA: Totales + Acciones -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Totales -->
            <Border Grid.Row="0" Style="{StaticResource CardBorder}" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="RESUMEN" Style="{StaticResource SectionHeader}" Margin="0,0,0,12"/>

                    <Grid Margin="0,4">
                        <TextBlock Text="Subtotal:" Style="{StaticResource BodyText}"/>
                        <TextBlock Text="{Binding Subtotal, StringFormat='Bs. {0:N2}'}"
                                   HorizontalAlignment="Right" Style="{StaticResource BodyText}"/>
                    </Grid>
                    <Grid Margin="0,4">
                        <TextBlock Text="Descuento:" Style="{StaticResource BodyText}"/>
                        <TextBox Style="{StaticResource PosTextBoxNumber}" Width="90"
                                 HorizontalAlignment="Right" Height="28" FontSize="12"
                                 Text="{Binding Descuento, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>

                    <Separator Background="{StaticResource BorderColor}" Margin="0,10"/>

                    <Grid Margin="0,4">
                        <TextBlock Text="TOTAL:" FontFamily="Segoe UI Semibold" FontSize="15"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="{Binding Total, StringFormat='Bs. {0:N2}'}"
                                   HorizontalAlignment="Right"
                                   FontFamily="Segoe UI Black" FontSize="18"
                                   Foreground="{StaticResource Accent}"/>
                    </Grid>
                    <Grid Margin="0,4">
                        <TextBlock Text="IVA (13/113):" Style="{StaticResource FieldLabel}"/>
                        <TextBlock Text="{Binding Iva, StringFormat='Bs. {0:N2}'}"
                                   HorizontalAlignment="Right"
                                   Style="{StaticResource FieldLabel}"/>
                    </Grid>

                    <Separator Background="{StaticResource BorderColor}" Margin="0,10"/>

                    <!-- MÃ©todo de pago -->
                    <TextBlock Text="MÃ©todo de Pago" Style="{StaticResource FieldLabel}"/>
                    <ComboBox Style="{StaticResource PosComboBox}"
                              SelectedValue="{Binding MetodoPago}"
                              SelectedValuePath="Tag">
                        <ComboBoxItem Content="Efectivo" Tag="1" IsSelected="True"/>
                        <ComboBoxItem Content="Tarjeta de dÃ©bito" Tag="2"/>
                        <ComboBoxItem Content="Tarjeta de crÃ©dito" Tag="3"/>
                        <ComboBoxItem Content="Transferencia bancaria" Tag="5"/>
                        <ComboBoxItem Content="Otros" Tag="9"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Acciones -->
            <Border Grid.Row="1" Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="ACCIONES" Style="{StaticResource SectionHeader}" Margin="0,0,0,4"/>

                    <Button Style="{StaticResource BtnPrimary}" Height="44"
        Margin="0,0,0,8"
        Command="{Binding EmitirFacturaCommand}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="âš¡" FontSize="16" Margin="0,0,6,0"/>
                            <TextBlock Text="EMITIR FACTURA  [F9]"
                                       FontFamily="Segoe UI Semibold" FontSize="13"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource BtnSecondary}" Height="36"
                            Command="{Binding NuevaFacturaCommand}">
                        <TextBlock Text="ðŸ—‘ Nueva Factura  [F5]" FontSize="12"/>
                    </Button>

                    <!-- Estado de envÃ­o -->
                    <Border Padding="10,8" CornerRadius="6" Margin="0,4,0,0"
                            Background="{StaticResource BgSecondary}">
                        <TextBlock Text="{Binding EstadoEnvio}"
                                   Style="{StaticResource FooterLabel}"
                                   TextWrapping="Wrap" TextAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>