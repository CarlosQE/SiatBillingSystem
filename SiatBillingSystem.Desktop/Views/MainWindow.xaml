<Window x:Class="SiatBillingSystem.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SiatBillingSystem.Desktop.ViewModels"
        xmlns:views="clr-namespace:SiatBillingSystem.Desktop.Views"
        Title="Nexus - INSEIN" Height="700" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgPrimary}">

    <Window.InputBindings>
        <KeyBinding Key="F1" Command="{Binding NavigateToPosCommand}"/>
        <KeyBinding Key="F2" Command="{Binding NavigateToClientesCommand}"/>
        <KeyBinding Key="F10" Command="{Binding NavigateToConfiguracionCommand}"/>
        <KeyBinding Key="B" Modifiers="Ctrl" Command="{Binding ToggleMenuCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding IsMenuExpanded, Converter={StaticResource MenuWidthConverter}}"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="{StaticResource Sidebar}"
                BorderBrush="{StaticResource BorderSubtle}" BorderThickness="0,0,1,0">
            <DockPanel>

                <!-- Logo -->
                <Border DockPanel.Dock="Top" Background="{StaticResource SidebarHeader}" Padding="0,16,0,16">
                    <TextBlock HorizontalAlignment="Center"
                            FontFamily="Segoe UI Black" FontSize="18"
                            Foreground="{StaticResource Accent}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="NEXUS"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMenuExpanded}" Value="False">
                                        <Setter Property="Text" Value="N"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>

                <!-- Botón contraer/expandir -->
                <Button DockPanel.Dock="Bottom" Style="{StaticResource NavButton}"
                        Command="{Binding ToggleMenuCommand}" Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock FontSize="14" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="«"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMenuExpanded}" Value="False">
                                            <Setter Property="Text" Value="»"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" Foreground="White"
                                Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Contraer"/>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Button>

                <!-- Navegación -->
                <StackPanel DockPanel.Dock="Top" Margin="0,8,0,0">

                            <Button Command="{Binding NavigateToPosCommand}">
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource NavButton}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ActiveSection}" Value="POS">
                            <Setter Property="Background" Value="{StaticResource AccentMuted}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                            <Setter Property="BorderThickness" Value="2,0,0,0"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Text="🧾" FontSize="15" VerticalAlignment="Center"/>
                <TextBlock Text="Grilla POS [F1]" Margin="10,0,0,0"
                        VerticalAlignment="Center" Foreground="White"
                        Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"/>
            </StackPanel>
        </Button>

        <Button Command="{Binding NavigateToClientesCommand}">
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource NavButton}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ActiveSection}" Value="Clientes">
                            <Setter Property="Background" Value="{StaticResource AccentMuted}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                            <Setter Property="BorderThickness" Value="2,0,0,0"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Text="👥" FontSize="15" VerticalAlignment="Center"/>
                <TextBlock Text="Clientes [F2]" Margin="10,0,0,0"
                        VerticalAlignment="Center" Foreground="White"
                        Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"/>
                </StackPanel>
            </Button>

<Button Command="{Binding NavigateToConfiguracionCommand}">
    <Button.Style>
        <Style TargetType="Button" BasedOn="{StaticResource NavButton}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ActiveSection}" Value="Configuracion">
                    <Setter Property="Background" Value="{StaticResource AccentMuted}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                    <Setter Property="BorderThickness" Value="2,0,0,0"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Button.Style>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
        <TextBlock Text="⚙️" FontSize="15" VerticalAlignment="Center"/>
        <TextBlock Text="Configuracion [F10]" Margin="10,0,0,0"
                   VerticalAlignment="Center" Foreground="White"
                   Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"/>
    </StackPanel>
</Button>

                </StackPanel>
            </DockPanel>
        </Border>

        <!-- CONTENIDO PRINCIPAL -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource TopBar}" Padding="20,0">
                <TextBlock Text="{Binding CurrentPageTitle}"
                           Foreground="White" FontSize="16" VerticalAlignment="Center"/>
            </Border>

            <!-- Vista activa -->
            <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type vm:PosGridViewModel}">
                        <views:PosGridView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:ClientesViewModel}">
                        <views:ClientesView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:ConfiguracionViewModel}">
                        <views:ConfiguracionView/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Grid>
    </Grid>
</Window>