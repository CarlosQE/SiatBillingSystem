<Window x:Class="SiatBillingSystem.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SiatBillingSystem.Desktop.ViewModels"
        xmlns:views="clr-namespace:SiatBillingSystem.Desktop.Views"
        Title="Nexus - INSEIN" Height="700" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgPrimary}">

    <Window.InputBindings>
        <KeyBinding Key="F1" Command="{Binding NavigateToPosCommand}"/>
        <KeyBinding Key="F2" Command="{Binding NavigateToClientesCommand}"/>
        <KeyBinding Key="F10" Command="{Binding NavigateToConfiguracionCommand}"/>
        <KeyBinding Key="B" Modifiers="Ctrl" Command="{Binding ToggleMenuCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding IsMenuExpanded, Converter={StaticResource MenuWidthConverter}}"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="{StaticResource Sidebar}"
                BorderBrush="{StaticResource BorderSubtle}" BorderThickness="0,0,1,0">
            <DockPanel>

                <Border DockPanel.Dock="Top" Background="{StaticResource SidebarHeader}" Padding="0,16,0,16">
                    <TextBlock Text="NEXUS" HorizontalAlignment="Center"
                               FontFamily="Segoe UI Black" FontSize="18"
                               Foreground="{StaticResource Accent}"/>
                </Border>

                <StackPanel DockPanel.Dock="Top" Margin="0,8,0,0">
                    <Button Style="{StaticResource NavButton}" Command="{Binding NavigateToPosCommand}">
                        <TextBlock Text="Grilla POS [F1]" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource NavButton}" Command="{Binding NavigateToClientesCommand}">
                        <TextBlock Text="Clientes [F2]" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource NavButton}" Command="{Binding NavigateToConfiguracionCommand}">
                        <TextBlock Text="Configuracion [F10]" Foreground="White"/>
                    </Button>
                </StackPanel>

                <Button DockPanel.Dock="Bottom" Style="{StaticResource NavButton}"
                        Command="{Binding ToggleMenuCommand}" Margin="0,0,0,8">
                    <TextBlock Text="Contraer" Foreground="White"/>
                </Button>

            </DockPanel>
        </Border>

        <!-- CONTENIDO PRINCIPAL -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource TopBar}" Padding="20,0">
                <TextBlock Text="{Binding CurrentPageTitle}"
                           Foreground="White" FontSize="16" VerticalAlignment="Center"/>
            </Border>

            <!-- DEBUG: mostrar tipo del ViewModel actual -->
            <TextBlock Grid.Row="1" Foreground="Yellow" FontSize="12" Margin="10"
                       Text="{Binding CurrentViewModel}"/>

            <!-- Vista activa -->
            <ContentControl Grid.Row="2" Content="{Binding CurrentViewModel}">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type vm:PosGridViewModel}">
                        <views:PosGridView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:ClientesViewModel}">
                        <views:ClientesView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:ConfiguracionViewModel}">
                        <views:ConfiguracionView/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Grid>
    </Grid>
</Window>