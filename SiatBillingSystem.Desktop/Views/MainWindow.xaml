<Window x:Class="SiatBillingSystem.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SiatBillingSystem.Desktop.ViewModels"
        xmlns:views="clr-namespace:SiatBillingSystem.Desktop.Views"
        Title="SIAT Billing System" Height="700" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgPrimary}">

    <Window.InputBindings>
        <KeyBinding Key="F1" Command="{Binding NavigateToPosCommand}"/>
        <KeyBinding Key="F2" Command="{Binding NavigateToClientesCommand}"/>
        <KeyBinding Key="F10" Command="{Binding NavigateToConfiguracionCommand}"/>
        <KeyBinding Key="B" Modifiers="Ctrl" Command="{Binding ToggleMenuCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding IsMenuExpanded,
                Converter={StaticResource MenuWidthConverter}}"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="{StaticResource Sidebar}"
                BorderBrush="{StaticResource BorderSubtle}" BorderThickness="0,0,1,0">
            <DockPanel>

                <!-- Logo / Header -->
                <Border DockPanel.Dock="Top" Background="{StaticResource SidebarHeader}"
                        Padding="0,16,0,16">
                    <StackPanel>
                        <TextBlock Text="âš¡ SIAT" HorizontalAlignment="Center"
                                   FontFamily="Segoe UI Black" FontSize="18"
                                   Foreground="{StaticResource Accent}"/>
                        <TextBlock Text="Billing System"
                                   Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"
                                   HorizontalAlignment="Center"
                                   Style="{StaticResource SubtitleSidebar}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Empresa info -->
                <Border DockPanel.Dock="Top"
                        Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"
                        Padding="12,10" BorderBrush="{StaticResource BorderSubtle}"
                        BorderThickness="0,0,0,1">
                    <StackPanel>
                        <TextBlock Text="{Binding EmpresaNombre}"
                                   Style="{StaticResource TitleSidebar}"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding NitEmpresa, StringFormat='NIT: {0}'}"
                                   Style="{StaticResource SubtitleSidebar}"/>
                    </StackPanel>
                </Border>

                <!-- NavegaciÃ³n -->
                <StackPanel DockPanel.Dock="Top" Margin="0,8,0,0">

                    <TextBlock Margin="16,8,0,4"
                               Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"
                               Style="{StaticResource SectionHeader}" Text="FACTURACIÃ“N"/>

                    <Button Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToPosCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ§¾" FontSize="16" Width="28" TextAlignment="Center"/>
                            <TextBlock Text="Grilla POS  [F1]"
                                       Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"
                                       Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <TextBlock Margin="16,12,0,4"
                               Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"
                               Style="{StaticResource SectionHeader}" Text="GESTIÃ“N"/>

                    <Button Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToClientesCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ‘¥" FontSize="16" Width="28" TextAlignment="Center"/>
                            <TextBlock Text="Clientes  [F2]"
                                       Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"
                                       Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <TextBlock Margin="16,12,0,4"
                               Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"
                               Style="{StaticResource SectionHeader}" Text="SISTEMA"/>

                    <Button Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToConfiguracionCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš™ï¸" FontSize="16" Width="28" TextAlignment="Center"/>
                            <TextBlock Text="ConfiguraciÃ³n  [F10]"
                                       Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"
                                       Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Toggle sidebar -->
                <Button DockPanel.Dock="Bottom" Style="{StaticResource NavButton}"
                        Command="{Binding ToggleMenuCommand}" Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="14" Width="28" TextAlignment="Center"
                                   Text="{Binding IsMenuExpanded, Converter={StaticResource MenuWidthConverter}}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="â—€"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMenuExpanded}" Value="False">
                                            <Setter Property="Text" Value="â–¶"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="Contraer  [Ctrl+B]"
                                   Visibility="{Binding IsMenuExpanded, Converter={StaticResource BoolToVisibility}}"
                                   Margin="6,0,0,0" VerticalAlignment="Center"
                                   Style="{StaticResource BodyText}"/>
                    </StackPanel>
                </Button>

            </DockPanel>
        </Border>

        <!-- CONTENIDO PRINCIPAL -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Border Grid.Row="0" Background="{StaticResource TopBar}"
                    BorderBrush="{StaticResource BorderSubtle}" BorderThickness="0,0,0,1"
                    Padding="20,0">
                <Grid>
                    <TextBlock Text="{Binding CurrentPageTitle}"
                               Style="{StaticResource PageTitle}"
                               VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
            VerticalAlignment="Center">
    <Border Background="#1A22C55E" CornerRadius="12" Padding="8,3"
            Margin="0,0,8,0">
        <TextBlock Text="â— En lÃ­nea" FontSize="11"
                   Foreground="{StaticResource Success}"/>
    </Border>
    <TextBlock Text="Bolivia (UTC-4)" FontSize="11"
               Foreground="{StaticResource TextSecondary}"
               VerticalAlignment="Center"/>
</StackPanel>
                </Grid>
            </Border>

            <!-- Vista activa (ContentControl con DataTemplates) -->
            <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type vm:PosGridViewModel}">
                        <views:PosGridView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:ClientesViewModel}">
                        <views:ClientesView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:ConfiguracionViewModel}">
                        <views:ConfiguracionView/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Grid>
    </Grid>
</Window>